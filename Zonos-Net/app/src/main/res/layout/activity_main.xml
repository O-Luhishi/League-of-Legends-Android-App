<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black_Background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zonosnetworks.zonos_net.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:id="@+id/leagueHeading1"
        android:src="@mipmap/leagueheading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxHeight="200dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:id="@+id/leagueSubHeading"
        android:src="@mipmap/leaguewelcome"
        android:maxHeight="200dp"
        android:layout_below="@+id/leagueHeading1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ViewFlipper
        android:id="@+id/bckgrndViewFlipper1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leagueSubHeading">
        <ImageView
            android:id="@+id/mp_transitionSlider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/tournamentone"
            android:layout_marginTop="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:id="@+id/mp_transitionSlider2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/leaguechampionship"
            android:layout_marginTop="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:id="@+id/mp_transitionSlider3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/leaguechampions"
            android:layout_marginTop="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:id="@+id/mp_transitionSlider4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/leagueshoutcasters"
            android:layout_marginTop="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />


    </ViewFlipper>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mp_firstPara"
        android:text="@string/mp_first_para"
        android:textColor="@color/White"
        android:layout_below="@+id/bckgrndViewFlipper1"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mp_second_Para"
        android:text="@string/mp_second_para"
        android:textColor="@color/White"
        android:layout_below="@+id/mp_firstPara"
        android:layout_marginBottom="22dp"
        />


   <TextView
       android:id="@+id/sponsor_para"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:textColor="@color/colorPrimary"
       android:text="@string/mp_sponsor"
       android:layout_below="@+id/mp_second_Para"
       android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/sponsor_para_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:text="@string/mp_sponsor2"
            android:layout_below="@+id/sponsor_para" />

    </RelativeLayout>

</ScrollView>