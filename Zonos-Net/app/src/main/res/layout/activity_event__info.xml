<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black_Background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zonosnetworks.zonos_net.MainActivity">


    <ImageView
        android:id="@+id/ieHeading1"
        android:layout_width="fill_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:src="@mipmap/leagueheading"
    />

    <ImageView
        android:id="@+id/leagueSubHeading"
        android:layout_width="fill_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:src="@mipmap/event_info_heading"
        android:maxHeight="200dp"
        android:layout_below="@+id/ieHeading1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/ei_first_para"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ei_first_para"
        android:textColor="@color/White"
        android:layout_below="@+id/leagueSubHeading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
    android:id="@+id/ei_second_heading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/ei_second_heading"
    android:textColor="@color/White"
    android:textSize="20dp"
    android:layout_below="@+id/ei_first_para"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/ei_second_para"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ei_second_para"
        android:textColor="@color/White"
        android:layout_below="@+id/ei_second_heading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/ei_first_bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ei_first_bullet"
        android:textColor="@color/White"
        android:layout_below="@+id/ei_second_para"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    </RelativeLayout>